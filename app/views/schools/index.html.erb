<h1>Listing schools</h1>

<%= page_navigation_links @schools %>

<table class='table table-striped'>
  <tr>
    <th>Board</th>
    <th>Category</th>
    <th>School type</th>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>Province</th>
    <th>Postal code</th>
    <th>Grade range</th>
    <th>Has ecs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.board %></td>
    <td><%= school.category %></td>
    <td><%= school.school_type %></td>
    <td><%= school.name %></td>
    <td><%= school.address %></td>
    <td><%= school.city %></td>
    <td><%= school.province %></td>
    <td><%= school.postal_code %></td>
    <td><%= school.grade_range %></td>
    <td><%= school.has_ecs %></td>
    <td><%= link_to 'Show', school, :class => 'btn btn-mini btn-primary' %></td>
    <td><%= link_to 'Edit', edit_school_path(school), :class => 'btn btn-mini btn-info' %></td>
    <td><%= link_to 'Destroy', school, :class => 'btn btn-mini btn-danger', confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= page_navigation_links @schools %>
<br />

<%= link_to new_school_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"> </i>New School
<% end %>
